{{- if not .ephemeral }}

[".local/bin/yazi"]
  type = "archive-file"
  url = {{ gitHubLatestReleaseAssetURL "sxyazi/yazi" "yazi-x86_64-unknown-linux-gnu.zip" | quote }}
  executable = true
  path = "yazi-x86_64-unknown-linux-gnu/yazi"

{{- end }}

{{ if ne .chezmoi.os "darwin" -}}
[".local/bin/eza"]
  type = "archive-file"
  url = {{ gitHubLatestReleaseAssetURL "eza-community/eza" "eza_x86_64-unknown-linux-gnu.tar.gz" | quote }}
  executable = true
  path = "./eza"

[".local/bin/nvim"]
  type = "archive-file"
  url = {{ gitHubLatestReleaseAssetURL "neovim/neovim" "nvim-linux-x86_64.tar.gz" | quote }}
  executable = true
  path = "nvim-linux-x86_64/bin/nvim"

[".local/bin/lazygit"]
  type = "archive-file"
  url = {{ gitHubLatestReleaseAssetURL "jesseduffield/lazygit" "lazygit_0.55.1_linux_x86_64.tar.gz" | quote }}
  executable = true
  path = "lazygit"

{{- end }}

[".oh-my-zsh"]
  type = "archive"
  url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
  exact = true
  stripComponents = 1
  refreshPeriod = "168h"
  exclude = [
    "*/.*",
    "*/templates",
    "*/themes",
  ]

{{- if .dockerSupported }}
[".local/bin/lazydocker"]
  type = "archive-file"
  url = {{ gitHubLatestReleaseAssetURL "jesseduffield/lazydocker" "lazydocker_0.24.1_Linux_x86.tar.gz" | quote }}
  executable = true
  path = "lazydocker_0.24.1_Linux_x86/lazydocker"

{{- end }}

[".config/tmux/plugins/tpm"]
  type = "git-repo"
  url = "https://github.com/tmux-plugins/tpm.git"
  refreshPeriod = "168h"

[".oh-my-zsh/custom/plugins/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
    exclude = [
        "*/.editorconfig",
        "*/.gitattributes",
        "*/.github",
        "*/.gitignore",
    ]

[".oh-my-zsh/custom/plugins/zsh-autosuggestions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
    exclude = [
        "*/.editorconfig",
        "*/.gitattributes",
        "*/.github",
        "*/.gitignore",
    ]

[".oh-my-zsh/custom/plugins/fzf-tab"]
    type = "archive"
    url = "https://github.com/Aloxaf/fzf-tab/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
    exclude = [
        "*/.github",
        "*/.gitignore",
    ]
